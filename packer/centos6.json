{
  "push": {
    "name": "tomohiro/centos6",
    "vcs": true
  },
  "variables": {
    "atlas_username": "tomohiro",
    "atlas_name": "centos6"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": ".",
      "iso_checksum": "9d3fec5897be6b3fed4d3dda80b8fa7bb62c616bbfd4bdcd27295ca9b764f498",
      "iso_checksum_type": "sha256",
      "iso_url": "http://centos.mirror.cdnetworks.com/6.7/isos/x86_64/CentOS-6.7-x86_64-minimal.iso",
      "shutdown_command": "sudo shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "3000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--pae",
          "on"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "execute_command": "sudo sh '{{ .Path }}'",
      "scripts": [
        "postinstall/base.sh",
        "postinstall/vagrant.sh",
        "postinstall/virtualbox.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": 9
      },
      {
        "type": "atlas",
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox"
        }
      }
    ]
  ]
}
