{
  "push": {
    "name": "tomohiro/centos6",
    "vcs": true
  },
  "variables": {
    "atlas_username": "tomohiro",
    "atlas_name": "centos6"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": ".",
      "iso_checksum": "5458f357e8a55e3a866dd856896c7e0ac88e7f9220a3dd74c58a3b0acede8e4d",
      "iso_checksum_type": "sha256",
      "iso_url": "http://ftp.riken.jp/Linux/centos/6/isos/x86_64/CentOS-6.6-x86_64-minimal.iso",
      "shutdown_command": "sudo shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "3000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--pae",
          "on"
        ]
      ],
      "vm_name": "box"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "postinstall/base.sh",
        "postinstall/vagrant.sh",
        "postinstall/virtualbox.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "keep_input_artifact": false
    },
    {
      "type": "atlas",
      "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "virtualbox"
      }
    }]
  ]
}
